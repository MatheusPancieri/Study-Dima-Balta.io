@page "/login"
@layout Layout

<PageTitle>Dima - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="img/dima.png" alt="Dima - Controle Financeiro" width="200" />
            </div>
            <MudForm @ref="_mudForm">
                <MudTextField T="string" Label="E-mail" InputType="InputType.Email" Required="true"
                    RequiredError="Field E-mail is Required"
                    Validation="@(new EmailAddressAttribute{ErrorMessage="Invalid Email."})" />
                <MudTextField T="string" Label="Password" InputType="InputType.Password" Placeholder="Password"
                    Required="true" RequiredError="Field Password is Required" />

            </MudForm>
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">Entrar</MudButton>
                <MudSpacer></MudSpacer>
                <MudButton Href="registro">Registrar</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;

}
