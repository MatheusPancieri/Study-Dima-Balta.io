@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="_isDarkMode" Theme="Configuration.Theme" />
<MudSnackbarElement />

<MudLayout>
    <MudAppBar>
        Dima
        <MudSpacer></MudSpacer>
        <MudSwitch @bind-Checked="@_isDarkMode"></MudSwitch>
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _isDarkMode = true;
}